<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example._207059_cv.PreviewpageController"
      spacing="20" prefWidth="600" prefHeight="700"
      style="-fx-background-color: #f7f7f7; -fx-padding: 20;">

    <Label text="Preview CV" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
    <Separator/>

    <HBox spacing="20" alignment="TOP_LEFT">


        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label fx:id="fullNameLabel" text="Full Name"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Label fx:id="emailLabel" text="Email"/>
            <Label fx:id="phoneLabel" text="Phone"/>
            <Label fx:id="addressLabel" text="Address"/>
        </VBox>

        <ImageView fx:id="photoView"
                   fitWidth="140" fitHeight="160"
                   preserveRatio="true"
                   style="-fx-border-color: gray; -fx-border-width: 2px;"/>
    </HBox>

    <Separator/>

    <Label text="Skills:" style="-fx-font-weight: bold;"/>
    <Label fx:id="skillsLabel" wrapText="true"/>
    <Separator/>

    <Label text="Education:" style="-fx-font-weight: bold;"/>
    <Label fx:id="educationLabel" wrapText="true"/>
    <Separator/>

    <Label text="Experience:" style="-fx-font-weight: bold;"/>
    <Label fx:id="experienceLabel" wrapText="true"/>
    <Separator/>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="editButton" text="Edit"
                onAction="#onEditCVClick"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;"/>

        <Button fx:id="saveButton" text="Save"
                onAction="#onSaveClick"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;"/>
    </HBox>


</VBox>
