<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="750" prefWidth="600" spacing="15" style="-fx-background-color: #f7f7f7;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example._207059_cv.FormController">

    <padding><Insets bottom="30" left="40" right="40" top="30" /></padding>

    <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="CV Information Form" />

    <VBox prefWidth="500" spacing="10">
        <TextField fx:id="fullNameField" promptText="Full Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="phoneField" promptText="Phone" />
        <TextField fx:id="addressField" promptText="Address" />


        <TextArea fx:id="skillsField" prefRowCount="3" promptText="Skills" wrapText="true" />
        <TextArea fx:id="educationField" prefRowCount="4" promptText="Education" wrapText="true" />
        <TextArea fx:id="experienceField" prefRowCount="4" promptText="Experience" wrapText="true" />
    </VBox>
    <HBox prefWidth="500" spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="uploadPhotoButton" onAction="#onUploadPhotoClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px;"
                text="Upload Photo" />
        <Label fx:id="photoPathLabel" text="No file selected" style="-fx-font-size: 14px;" />
    </HBox>


    <HBox prefWidth="500" spacing="20">
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="generateButton" onAction="#onGenerateCVClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;" text="Generate CV" />
    </HBox>
</VBox>
